@model Boutique_Natural.ViewModel.Article_ViewModel

    <h4 class="alert alert-info">Are you sure you want to Edit this?</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="libelle" class="control-label"></label>
                <input asp-for="libelle" class="form-control" />
                <span asp-validation-for="libelle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" cols="4" rows="6"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="qte_Stck" class="control-label"></label>
                <input asp-for="qte_Stck" class="form-control" />
                <span asp-validation-for="qte_Stck" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prix_unitaire" class="control-label">Prix Unitaire</label>
                <input asp-for="prix_unitaire" class="form-control" />
                <span asp-validation-for="prix_unitaire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prix_unitaire" class="control-label">Image</label>
                <br />
                <img style="width:120px;height:140px" src="~/Image_Article/@Model.img1" class="img-thumbnail" />
            </div>
                <div class="form-group">
                    <label asp-for="file1" class="control-label">Upload Image</label>
                    <input type="file" asp-for="file1" name="file1" class="form-control" />
                    <span asp-validation-for="file1" class="text-danger"></span>
                    <input type="hidden" asp-for="img1" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Cat_Id" class="control-label">Catégories</label>
                    <select asp-for="Cat_Id" class="form-control" asp-items="@(new SelectList(Model.categories,"id","cat_Nom"))">
                    </select>
                    <span asp-validation-for="Cat_Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-info" />
                    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>

                </div>
        </form>
    </div>
</div>
@section admin{ }
